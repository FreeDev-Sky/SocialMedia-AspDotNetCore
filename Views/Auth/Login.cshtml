@model SocialMedia_AspDotNetCore.DTOs.LoginDto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Login";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="card shadow-custom fade-in">
            <div class="card-header text-center">
                <h3 class="mb-0">
                    <i class="fas fa-sign-in-alt"></i> Welcome Back
                </h3>
            </div>
            <div class="card-body">
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-circle"></i> @ViewBag.Error
                    </div>
                }
                <form asp-action="Login" method="post">
                    @Html.AntiForgeryToken()
                    <div class="mb-4">
                        <label asp-for="Email" class="form-label">
                            <i class="fas fa-envelope"></i> Email Address
                        </label>
                        <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-4">
                        <label asp-for="Password" class="form-label">
                            <i class="fas fa-lock"></i> Password
                        </label>
                        <input asp-for="Password" class="form-control" placeholder="Enter your password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 btn-lg">
                        <i class="fas fa-sign-in-alt"></i> Login
                    </button>
                </form>
                <div class="mt-4 text-center">
                    <p class="text-muted mb-0">
                        Don't have an account? 
                        <a asp-action="Register" class="text-gradient fw-bold">
                            <i class="fas fa-user-plus"></i> Register here
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

